{
  "name": "@polymerdao/ibc-sdk",
  "version": "0.0.1",
  "description": "IBC SDK",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js"
    }
  },
  "scripts": {
    "test": "run-s build test-with-ava",
    "test-with-ava": "ava",
    "test-debug": "TEST_LOG_LEVEL=debug run-s build test-with-ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build": "tsc -p tsconfig.json",
    "build-binary": "npx esbuild src/cli/main.ts --bundle --platform=node --outfile=bin/ibctl",
    "clean": "rm -rf dist build",
    "clean-build": "run-s clean build",
    "cli-debug": "ts-node src/bin/debug.ts",
    "cli-relayer-debug": "ts-node src/bin/debug-relayer.ts",
    "prepare": "run-s build"
  },
  "author": "Polymer Labs",
  "license": "UNLICENSED",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@typechain/ethers-v5": "^10.1.1",
    "@types/dockerode": "^3.3.9",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "ava": "^4.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.0",
    "ts-node": "^10.7.0",
    "ts-proto": "^1.126.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@cosmjs/stargate": "^0.30.0",
    "@cosmjs/tendermint-rpc": "^0.30.0",
    "commander": "^9.4.1",
    "esbuild": "^0.17.5",
    "ethers": "^5.7.2",
    "hardhat": "^2.11.2",
    "js-yaml": "^4.1.0",
    "just-clone": "^6.0.1",
    "lodash": "^4.17.21",
    "winston": "^3.3.3",
    "zod": "^3.17.3",
    "zx-cjs": "^7.0.7-0"
  },
  "ava": {
    "failFast": true,
    "concurrency": 1,
    "workerThreads": false,
    "timeout": "600s",
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    },
    "files": [
      "src/**/*.spec.ts",
      "src/**/*test.ts"
    ]
  },
  "bin": {}
}
